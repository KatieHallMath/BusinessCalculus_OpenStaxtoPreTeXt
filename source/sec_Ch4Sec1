</solution>


<!-- Move title outside statement--> <statement id="fs-id1170572368467">
<p id="fs-id1170572368470"><m>\displaystyle{\int_{0}^{1} <m:msup>(1-x)2</m:msup>dx} </m></p>
</statement>


<!-- Move title outside statement--> <statement id="fs-id1170572306381">
